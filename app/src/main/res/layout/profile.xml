<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8E24AA">

    <View
        android:id="@+id/headerGradient"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="@drawable/login_background"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="PROFILE"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:letterSpacing="0.1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/profileArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="32dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle">

        <FrameLayout
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/circle_bg"
            android:padding="8dp">

            <ImageView
                android:id="@+id/profileEgg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/egg_golden" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Userprofile"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="user123@gmail.com"
                android:textColor="#E0E0E0"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/content_card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileArea">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="40dp"
            android:paddingBottom="40dp"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/btnEditProfile"
                android:layout_width="280dp"
                android:layout_height="60dp"
                android:layout_marginBottom="16dp"
                android:text="Edit Profile"
                android:textAllCaps="false"
                android:textColor="#FAFAFA"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="start|center_vertical"
                android:paddingStart="24dp"
                app:backgroundTint="#18004c"
                android:background="@drawable/rounded_button"
                app:cornerRadius="30dp"
                app:icon="@android:drawable/ic_menu_edit"
                app:iconPadding="16dp"
                app:iconTint="#FAFAFA" />

            <Button
                android:id="@+id/btnSettings"
                android:layout_width="280dp"
                android:layout_height="60dp"
                android:layout_marginBottom="16dp"
                android:text="Settings"
                android:textAllCaps="false"
                android:textColor="#FAFAFA"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="start|center_vertical"
                android:paddingStart="24dp"
                app:backgroundTint="#18004c"
                android:background="@drawable/rounded_button"
                app:cornerRadius="30dp"
                app:icon="@android:drawable/ic_menu_preferences"
                app:iconPadding="16dp"
                app:iconTint="#FAFAFA" />

            <Button
                android:id="@+id/btnNotifications"
                android:layout_width="280dp"
                android:layout_height="60dp"
                android:layout_marginBottom="16dp"
                android:text="Notifications"
                android:textAllCaps="false"
                android:textColor="#FAFAFA"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="start|center_vertical"
                android:paddingStart="24dp"
                app:backgroundTint="#18004c"
                android:background="@drawable/rounded_button"
                app:cornerRadius="30dp"
                app:icon="@android:drawable/ic_lock_idle_alarm"
                app:iconPadding="16dp"
                app:iconTint="#FAFAFA" />

            <Button
                android:id="@+id/btnLogout"
                android:layout_width="280dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:gravity="start|center_vertical"
                android:paddingStart="24dp"
                android:text="Logout"
                android:textAllCaps="false"
                android:textColor="#FAFAFA"
                android:background="@drawable/rounded_button"
                android:textSize="16sp"
                android:textStyle="bold"
                app:backgroundTint="#18004c"
                app:cornerRadius="30dp"
                app:icon="@android:drawable/ic_lock_power_off"
                app:iconPadding="16dp"
                app:iconTint="#FF4444" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <ImageView
        android:id="@+id/appLogo"
        android:layout_width="51dp"
        android:layout_height="37dp"
        android:scaleType="fitStart"
        android:src="@drawable/studypals_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>