<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8E24AA">

    <View
        android:id="@+id/studyHeader"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="@drawable/login_background"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvStudyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="FOCUS MODE"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        android:letterSpacing="0.15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/petContainer"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/circle_bg"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvStudyTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/studyPet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/egg_golden"
            android:scaleType="fitCenter" />
    </FrameLayout>

    <ImageView
        android:id="@+id/appLogo"
        android:layout_width="51dp"
        android:layout_height="37dp"
        android:layout_alignParentStart="true"
        android:scaleType="fitStart"
        android:src="@drawable/studypals_logo"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/timerCard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/content_card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/petContainer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="FOCUS TIME"
                android:textColor="#555555"
                android:textSize="18sp"
                android:textStyle="bold"
                android:letterSpacing="0.1"/>

            <TextView
                android:id="@+id/tvCountdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="25:00"
                android:textColor="#8E24AA"
                android:textSize="90sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-black"
                android:includeFontPadding="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Stay focused to grow your Pal!"
                android:textColor="#18004c"
                android:textSize="15sp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/btnStartFocus"
                android:layout_width="280dp"
                android:layout_height="65dp"
                android:layout_marginTop="45dp"
                android:text="START FOCUS"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                app:backgroundTint="#18004c"
                app:cornerRadius="32dp"
                android:background="@drawable/rounded_button"
                app:icon="@android:drawable/ic_media_play"
                app:iconSize="24dp"
                app:iconPadding="12dp"/>

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:id="@+id/btnQuitSession"
                android:layout_width="280dp"
                android:layout_height="60dp"
                android:layout_marginTop="16dp"
                android:text="Give Up"
                android:textStyle="bold"
                android:textColor="#FF4444"
                android:textSize="16sp"
                app:strokeColor="#FF4444"
                app:strokeWidth="2dp"
                app:cornerRadius="32dp" />



        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>